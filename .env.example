# Sploot Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# AUTHENTICATION (Required)
# ============================================
# Get these from https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk redirect URLs (already configured)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/app
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/app

# ============================================
# DATABASE (Required)
# ============================================
# Get these from Vercel Dashboard after creating Postgres database
# Make sure to enable pgvector extension
POSTGRES_URL=postgres://user:password@host/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgres://user:password@host/database?sslmode=require

# ============================================
# STORAGE (Required)
# ============================================
# Get this from Vercel Dashboard after enabling Blob Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_your_token_here

# ============================================
# AI EMBEDDINGS (Required for search)
# ============================================
# Get this from https://replicate.com
REPLICATE_API_TOKEN=r8_your_replicate_token_here

# ============================================
# CACHING (Optional but recommended)
# ============================================
# Get these from https://upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# ============================================
# DEVELOPMENT OPTIONS
# ============================================
# Set to true to use mock mode (no external services needed)
MOCK_MODE=false

# Port for development server (default: 3000)
PORT=3000

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# MONITORING (Optional)
# ============================================
# Error tracking with Sentry
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Analytics (if enabled)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=